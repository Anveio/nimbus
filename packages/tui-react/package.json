{
  "name": "@nimbus/tui-react",
  "version": "0.0.1",
  "private": true,
  "description": "React renderer for the Nimbus terminal stack.",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "clean": "git clean -xfd .",
    "build": "vite build --config vite.production.config.ts",
    "dev": "vite",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run --reporter=dot --silent",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:watch": "vitest --reporter=default --silent=false",
    "lint": "biome lint .",
    "lint:fix": "biome lint --fix . && biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "axe-core": "^4.10.3",
    "jsdom": "^27.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.9",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@nimbus/webgl-renderer": "^0.0.1"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  }
}
