{
  "extends": "../tsconfig/workspace-package-config.json",
  "compilerOptions": {
    "paths": {
      "@nimbus/websocket/*": ["./src/*"],
      "@nimbus/ssh/client/web": ["../ssh/src/client/web/index.ts"],
      "@nimbus/ssh/client/node": ["../ssh/src/client/node/index.ts"],
      "@nimbus/ssh/server/node": ["../ssh/src/server/node/index.ts"]
    },
    "rootDir": "../..",
    "composite": false,
    "incremental": false,
    "tsBuildInfoFile": "./node_modules/.cache/websocket.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../ssh/src/**/*.ts",
    "../ssh/src/**/*.tsx"
  ],
  "exclude": ["dist", "build", "node_modules"]
}
