{
  "name": "@nimbus/ssh",
  "version": "0.0.1",
  "description": "The core, transport-agnostic SSH protocol implementation for Nimbus.",
  "scripts": {
    "clean": "git clean -xfd .",
    "clean:artifacts": "rm -rf dist",
    "build": "npm run clean:artifacts && npm exec -- vite build --config vite.config.ts --mode client-web && npm exec -- vite build --config vite.config.ts --mode client-node && npm exec -- vite build --config vite.config.ts --mode server-node",
    "test": "vitest run",
    "test:watch": "vitest --reporter=default --silent=false",
    "test:coverage": "vitest run --coverage --reporter=dot --silent",
    "lint": "biome lint .",
    "lint:fix": "biome lint --fix . && biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^24.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "fake-indexeddb": "^6.0.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.9",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "sideEffects": false,
  "exports": {
    ".": null,
    "./client/web": {
      "types": "./src/client/web/index.ts",
      "source": "./src/client/web/index.ts",
      "import": "./dist/client/web.js",
      "require": "./dist/client/web.cjs"
    },
    "./client/node": {
      "types": "./src/client/node/index.ts",
      "source": "./src/client/node/index.ts",
      "import": "./dist/client/node.js",
      "require": "./dist/client/node.cjs"
    },
    "./server/node": {
      "types": "./src/server/node/index.ts",
      "source": "./src/server/node/index.ts",
      "import": "./dist/server/node.js",
      "require": "./dist/server/node.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**"
  ]
}
