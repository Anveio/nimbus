{
  "name": "@mana/webgl-renderer",
  "version": "0.0.1",
  "private": true,
  "description": "WebGL renderer for the Mana terminal stack.",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "clean": "git clean -xfd .",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run --reporter=dot --silent",
    "test:e2e": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "lint": "biome lint .",
    "lint:fix": "biome lint --fix . && biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@mana/vt": "^0.0.1"
  }
}
