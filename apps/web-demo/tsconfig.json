{
  "extends": "@nimbus/tsconfig/workspace-app-config.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "allowJs": false,
    "incremental": true,
    "paths": {
      "@/*": [
        "./app/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/components/*": [
        "./components/*"
      ]
    }
  },
  "include": [
    "app",
    "components",
    "lib",
    "scripts",
    "types",
    "next-env.d.ts",
    "test",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
