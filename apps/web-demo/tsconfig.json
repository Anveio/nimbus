{
  "extends": "@nimbus/tsconfig/workspace-app-config.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "allowJs": false,
    "incremental": true,
    "paths": {
      "@/*": ["./app/*"],
      "@/lib/*": ["./lib/*"],
      "@/components/*": ["./components/*"],
      "@nimbus/ssh": ["../../packages/ssh/src/index.ts"],
      "@nimbus/ssh/line-discipline": [
        "../../packages/ssh/src/public/line-discipline.ts"
      ],
      "@nimbus/ssh/*": [
        "../../packages/ssh/src/*",
        "../../packages/ssh/src/public/*"
      ],
      "@nimbus/*": ["../../packages/*"]
    }
  },
  "include": [
    "app",
    "components",
    "lib",
    "scripts",
    "types",
    "next-env.d.ts",
    "test",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
